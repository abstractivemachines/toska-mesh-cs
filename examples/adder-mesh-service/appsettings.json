{
  "Mesh": {
    "Service": {
      "ServiceName": "adder-mesh-service",
      "Address": "0.0.0.0",
      "Port": 8083,
      "Routing": {
        "Scheme": "http",
        "HealthCheckEndpoint": "/health",
        "Strategy": "RoundRobin",
        "Weight": 1
      }
    },
    "ServiceDiscovery": {
      "Grpc": {
        "Address": "http://discovery:80",
        "AllowInsecureTransport": true
      }
    },
    "ServiceAuth": {
      "Secret": "local-dev-mesh-service-secret-32chars",
      "Issuer": "ToskaMesh.Services",
      "Audience": "ToskaMesh.Services",
      "TokenLifetimeMinutes": 10
    },
    "Identity": {
      "ServiceName": "adder-mesh-service",
      "Roles": [
        "api"
      ]
    }
  }
}
