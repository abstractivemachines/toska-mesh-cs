{
  "Mesh": {
    "Service": {
      "ServiceName": "profile-kv-store-demo",
      "Address": "0.0.0.0",
      "Port": 8084,
      "Routing": {
        "Scheme": "http",
        "HealthCheckEndpoint": "/health",
        "Strategy": "RoundRobin",
        "Weight": 1
      }
    },
    "KeyValue": {
      "Provider": "ToskaStore",
      "ToskaStore": {
        "BaseUrl": "http://localhost:4000",
        "KeyPrefix": "profile-kv-store-demo"
      }
    },
    "ServiceAuth": {
      "Secret": "local-dev-mesh-service-secret-32chars",
      "Issuer": "ToskaMesh.Services",
      "Audience": "ToskaMesh.Services",
      "TokenLifetimeMinutes": 10
    },
    "Identity": {
      "ServiceName": "profile-kv-store-demo",
      "Roles": [
        "api"
      ]
    }
  }
}
