{
  "Urls": "http://localhost:5000",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "SecretKey": "your-secret-key-min-32-chars-long-change-in-production",
    "Issuer": "ToskaMesh.Gateway",
    "Audience": "ToskaMesh.Services",
    "ExpirationMinutes": 60,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "RateLimit": {
    "EnableRateLimiting": true,
    "PermitLimit": 100,
    "WindowSeconds": 60,
    "QueueLimit": 10
  },
  "Consul": {
    "Address": "http://localhost:8500"
  },
  "HealthChecks": {
    "Consul": {
      "HostName": "localhost",
      "Port": 8500
    }
  },
  "MassTransit": {
    "RabbitMq": {
      "Host": "localhost",
      "Username": "guest",
      "Password": "guest"
    }
  },
  "Mesh": {
    "Identity": {
      "ServiceName": "Gateway"
    },
    "Gateway": {
      "Routing": {
        "RoutePrefix": "/api/"
      },
      "Resilience": {
        "RetryCount": 3,
        "RetryBaseDelayMilliseconds": 200,
        "RetryBackoffExponent": 2.0,
        "RetryJitterMilliseconds": 200,
        "CircuitBreakerFailureThreshold": 0.5,
        "CircuitBreakerSamplingDurationSeconds": 30,
        "CircuitBreakerMinimumThroughput": 10,
        "CircuitBreakerBreakDurationSeconds": 20
      },
      "Tls": {
        "ClientCertificatePath": "/etc/tls/gateway-client.pfx",
        "ClientCertificatePassword": ""
      }
    },
    "ServiceAuth": {
      "Secret": "super-secret-mesh-key-change-me",
      "Issuer": "ToskaMesh.Services",
      "Audience": "ToskaMesh.Services",
      "TokenLifetimeMinutes": 5
    },
    "ServiceDiscovery": {
      "Grpc": {
        "Address": "http://localhost:5010"
      }
    }
  },
  "Dashboard": {
    "PrometheusBaseUrl": "http://localhost:9090",
    "TracingBaseUrl": "http://localhost:5004",
    "DiscoveryBaseUrl": "http://localhost:5010",
    "HealthMonitorBaseUrl": "http://localhost:5005"
  }
}
