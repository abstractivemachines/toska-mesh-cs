{
  "Urls": "http://localhost:5010",
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Consul": {
    "Address": "http://localhost:8500",
    "Datacenter": "dc1"
  },
  "HealthChecks": {
    "Consul": {
      "HostName": "localhost",
      "Port": 8500
    }
  },
  "HealthCheck": {
    "IntervalSeconds": 30
  },
  "Messaging": {
    "RabbitMqHost": "localhost",
    "RabbitMqVirtualHost": "/",
    "RabbitMqUsername": "guest",
    "RabbitMqPassword": "guest"
  },
  "Mesh": {
    "Identity": {
      "ServiceName": "Discovery"
    },
    "ServiceAuth": {
      "Secret": "super-secret-mesh-key-change-me",
      "Issuer": "ToskaMesh.Services",
      "Audience": "ToskaMesh.Services",
      "TokenLifetimeMinutes": 5
    },
    "ServiceDiscovery": {
      "Grpc": {
        "Address": "http://localhost:5010"
      }
    }
  }
}
