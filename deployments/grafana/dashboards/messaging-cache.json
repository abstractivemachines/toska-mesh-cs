{
  "uid": "toska-messaging",
  "title": "ToskaMesh Messaging & Cache",
  "tags": ["toskamesh", "messaging", "cache"],
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "15s",
  "style": "dark",
  "panels": [
    {
      "id": 1,
      "type": "timeseries",
      "title": "Queue Depth (messages ready)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": { "drawStyle": "line", "lineWidth": 2 },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 200 },
              { "color": "red", "value": 1000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "queue:messages_ready:sum{queue=~\"$queue\"}",
          "legendFormat": "{{queue}}"
        }
      ]
    },
    {
      "id": 2,
      "type": "timeseries",
      "title": "Queue Publish Rate (msg/s)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "custom": { "drawStyle": "line", "lineWidth": 2 }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "queue:publish_rate:per_second{queue=~\"$queue\"}",
          "legendFormat": "{{queue}}"
        }
      ]
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Cache Hit Ratio (%)",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "orange", "value": 80 },
              { "color": "green", "value": 90 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "values": false },
        "orientation": "horizontal",
        "textMode": "value"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "redis:cache_hit_ratio:percent",
          "legendFormat": "Hit Ratio"
        }
      ]
    },
    {
      "id": 4,
      "type": "timeseries",
      "title": "Queue Consumers",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 8 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "custom": { "drawStyle": "line", "lineWidth": 2 }
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "showLegend": true },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (queue) (rabbitmq_queue_consumers{queue=~\"$queue\"})",
          "legendFormat": "{{queue}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "type": "query",
        "name": "queue",
        "label": "Queue",
        "datasource": "Prometheus",
        "refresh": 2,
        "query": "label_values(rabbitmq_queue_messages_ready, queue)",
        "current": { "selected": false, "text": "All", "value": ".*" },
        "includeAll": true,
        "multi": true,
        "options": []
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "time": { "from": "now-30m", "to": "now" }
}
